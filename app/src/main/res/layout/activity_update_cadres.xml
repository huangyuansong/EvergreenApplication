<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.pc.evergreen.activitys.UpdateCadresActivity">
    <include layout="@layout/bar_title"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.handmark.pulltorefresh.library.PullToRefreshListView

            android:id="@+id/recycler_cdres"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ptr:prtDrawable="@drawable/default"
            />


    <Button
        android:id="@+id/bt_add_cadres"
        android:textSize="18sp"
        android:background="@drawable/bg_btn_press_selector"
        android:layout_width="match_parent"
        android:textColor="@color/color_titel"
        android:text="添加老干部信息"
        android:layout_weight="1"
        android:layout_height="0dp" />
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>
