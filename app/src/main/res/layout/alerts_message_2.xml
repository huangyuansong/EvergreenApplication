<?xml version="1.0" encoding="utf-8"?>
<!--消息对话框（双按钮）-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="200dp"
    android:background="@drawable/dialog_frame"
    android:orientation="vertical">
    <TextView
        android:id="@+id/alerts_title_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_titel"
        android:textColor="@color/color_Theme"
        android:text="消息提示："
        android:textSize="18dip"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/color_Theme"
        />
    <TextView
        android:id="@+id/alerts_massage_2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:background="@color/color_titel"
        android:textColor="@color/color_light_grey"
        android:text="this is message content"
        android:textSize="16dip"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/alerts_button_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="以后再说"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:background="@drawable/dialog_btn_press_left"
            android:textColor="@color/color_titel"
            android:textSize="16sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="@color/color_light_grey"/>
        <Button
            android:id="@+id/alerts_button_yes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="完善资料"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:background="@drawable/dialog_btn_press_right"
            android:textColor="@color/color_titel"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>