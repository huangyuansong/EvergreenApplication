<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/item_update_cadres"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/bg_menu_press_selector"
    android:layout_gravity="center"

    >

    <ImageView
        android:id="@+id/goods_image_exchange_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_weight="2"
      />

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:layout_weight="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/goods_name_exchange_item"
            android:textColor="@color/color_Theme"
            android:text="电热毯"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="型号："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="不详"
                android:id="@+id/goods_model_exchange_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="积分："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/goods_Integral_exchange_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="库存："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/goods_inventory_exchange_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/bt_goods_exchange_item"
        android:text="兑  换"
        android:layout_weight="1"
        android:textColor="@color/color_titel"
        android:background="@drawable/bg_btn_press_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
