<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/light_grey"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/id_date_manager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >
        <!-- android:clickable="false" 是为了防止ImageButton截取了触摸事件 ，这里事件要给它的上一级linearlayout-->
        <ImageView
            android:id="@+id/id_date_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/button_data_normal" />

        <TextView
            android:textColor="@color/color_light_grey"
            android:id="@+id/tv_date_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_place_manager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/id_place_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#00000000"
            android:textColor="@color/color_light_grey"
            android:clickable="false"
            android:src="@drawable/button_place_normal" />

        <TextView
            android:id="@+id/tv_place_manager"
            android:layout_width="wrap_content"
            android:textColor="@color/color_light_grey"
            android:layout_height="wrap_content"
            android:text="场所设置"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_notice_manager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/id_notice_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/button_notice_normal" />

        <TextView
            android:id="@+id/tv_notice_manager"
            android:textColor="@color/color_light_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布通知"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_statistical_manager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/id_statistical_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/button_statistical_normal" />

        <TextView
            android:id="@+id/tv_statistical_manager"
            android:layout_width="wrap_content"
            android:textColor="@color/color_light_grey"
            android:layout_height="wrap_content"
            android:text="数据统计"
            />
    </LinearLayout>

</LinearLayout>